<div class='col-md-3'>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(40,40) %>
  <table class = "table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class='row'>
    <%= link_to  edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <%end%>
  </div>
  <h2 class="mt-3">New book</h2>
  
  <%= form_with model: book_new do |f| %>
    <div class="form-group">
      <div class ="field_with_errors">
        <label for ="book-title">Title</label>
      </div>
      <div class ="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-group">
      <label for="book-opinion">Opinion</label>
      <div class ="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
    </div>
  <% end %>

  
</div>

