
<%= render 'books/info', user: @user %>

<% if @user == current_user %>
    <%= link_to "Edit", edit_user_path %>
<% end %>

<%= render 'books/form', book_new: @book_new %>



<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <%end%>
  </tbody>
</table>

