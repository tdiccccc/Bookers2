
<h2>Users</h2>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag 'sample-author1.jpg' %></td>
        <td><%= user.name %></td>
        <td><%= link_to user_path(user.id) do %>Show<%end%></td>
      </tr>
    <%end%>
  </tbody>
</table>
